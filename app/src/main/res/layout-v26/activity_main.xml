<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#29276f"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:ems="11"
        android:fontFamily="@font/cookierun_bold"
        android:text="@string/title1"
        android:textColor="#F3F3F3"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:autoSizeTextType="uniform"
        android:ems="11"
        android:fontFamily="@font/cookierun_bold"
        android:gravity="center_horizontal"
        android:paddingBottom="90dp"
        android:text="@string/title2"
        android:textColor="#F3F3F3"
        android:textSize="37sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView4" />

    <LinearLayout
        android:id="@+id/mainButtonLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <Button
            android:id="@+id/cabinetButton"
            style="@android:style/Widget.Holo.Button.Small"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/b18"
            android:fontFamily="@font/gonggothic_bold"
            android:paddingBottom="7dp"
            android:shadowColor="#F5F5F5"
            android:text="@string/cabinet2"
            android:textColor="#29276f"
            android:textColorLink="#403653"
            android:textSize="24sp" />

        <Button
            android:id="@+id/lampButton"
            style="@android:style/Widget.Holo.Button.Small"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/b18"
            android:fontFamily="@font/gonggothic_bold"
            android:paddingBottom="7dp"
            android:text="@string/memo"
            android:textColor="#29276f"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainButtonLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainButtonLayout1"
        app:layout_constraintVertical_bias="0.787">

        <Button
            android:id="@+id/cardButton"
            style="@android:style/Widget.Holo.Button.Small"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/b18"
            android:fontFamily="@font/gonggothic_bold"
            android:paddingBottom="7dp"
            android:text="@string/card"
            android:textColor="#29276f"
            android:textSize="24sp" />

        <Button
            android:id="@+id/settingsButton"
            style="@android:style/Widget.Holo.Button.Small"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:paddingBottom="7dp"
            android:background="@drawable/b18"
            android:fontFamily="@font/gonggothic_bold"
            android:text="@string/setting"
            android:textColor="#29276f"
            android:textSize="24sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>