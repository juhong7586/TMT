<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:elevation="4dp"
    android:background="#ffffff">
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="2dp"
        android:fontFamily="@font/gonggothic_medium"
        android:text="@string/addCabinet"
        android:textColor="#555454"
        android:textSize="27sp"
        android:layout_marginStart="20dp"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry" />
    <EditText
        android:id="@+id/stuffTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gonggothic_light"
        android:textSize="16sp"
        android:hint="@string/inserName"
        android:text=""
        android:autofillHints="이름 입력"
        android:inputType="text"
        android:textColor="#555454"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="parent" />
    <ImageButton
        android:id="@+id/backButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/before"
        app:layout_constraintTop_toBottomOf="@id/stuffTitle"
        app:layout_constraintStart_toStartOf="@id/stuffTitle"
        android:focusable="true"
        android:contentDescription="@string/back" />
    <ImageButton
        android:id="@+id/saveButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/upload"
        app:layout_constraintTop_toBottomOf="@id/stuffTitle"
        app:layout_constraintEnd_toEndOf="@id/stuffTitle"
        android:focusable="true"
        android:contentDescription="@string/save" />


</androidx.constraintlayout.widget.ConstraintLayout>