<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLED"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="4dp"
            android:background="@drawable/back_border"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/sendTitle1"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:fontFamily="@font/gonggothic_medium"


            android:gravity="center_vertical|center_horizontal"
            android:padding="4dp"
            android:text="보낼 물건들"
            android:textSize="25sp"
             />

        <TextView
            android:id="@+id/sendTitle2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/gonggothic_light"
            android:background="@drawable/back_border"
            android:gravity="center_vertical|center_horizontal"
            android:padding="4dp"
            android:text="한 번 더 확인하세요!"
            android:textSize="14sp" />


        </LinearLayout>
        <TextView
            android:id="@+id/sendingItemList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gonggothic_light"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:text=""
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/linearLED"
            app:layout_constraintLeft_toLeftOf="@id/linearLED" />
        <ImageButton
            android:id="@+id/backButton6"
            android:layout_width="40dp"
            android:layout_margin="4dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/before"
            android:background="#ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/sendingItemList"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/sendtocabinet" />
        <ImageButton
            android:id="@+id/toCabinet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/led2"
            android:background="#ffffff"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/sendingItemList"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/sendtocabinet" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>